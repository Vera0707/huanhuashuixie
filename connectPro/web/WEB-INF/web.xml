<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>DeleteStu</servlet-name>
        <servlet-class>com.lsx.model.DeleteStu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteStu</servlet-name>
        <url-pattern>/student/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InsertStu</servlet-name>
        <servlet-class>com.lsx.model.InsertStu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertStu</servlet-name>
        <url-pattern>/student/insert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateStu</servlet-name>
        <servlet-class>com.lsx.model.UpdateStu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStu</servlet-name>
        <url-pattern>/student/update</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DeleteListStu</servlet-name>
        <servlet-class>com.lsx.model.DeleteListStu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteListStu</servlet-name>
        <url-pattern>/student/deletes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SelectStu</servlet-name>
        <servlet-class>com.lsx.model.SelectStu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectStu</servlet-name>
        <url-pattern>/student/select</url-pattern>
    </servlet-mapping>


    <error-page>
        <error-code>404</error-code>
        <location>/public/src/view/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/public/src/view/404.jsp</location>
    </error-page>
</web-app>